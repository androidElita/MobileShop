<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation</item>
        <item name="itemTextColor">@drawable/selector_bottom_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:theme">@style/Text12Regular</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryHint">@string/search</item>
        <item name="android:theme">@style/Text16Regular</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="queryBackground">@color/colorPrimary</item>
    </style>


    <!-- Ш Р И Ф Т Ы -->

    <!-- Стиль шрифта -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="TextBoldMedium" parent="TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInfoRegular" parent="TextRegular">
        <item name="android:textColor">@color/info</item>
    </style>

    <style name="TextInfoMedium" parent="TextMedium">
        <item name="android:textColor">@color/info</item>
    </style>

    <style name="TextAccentRegular" parent="TextRegular">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Заголовки -->
    <style name="H1" parent="TextBoldMedium">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingMultiplier">42</item>
    </style>

    <style name="H2" parent="TextMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">32</item>
    </style>

    <style name="H3" parent="TextMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">28</item>
    </style>

    <style name="H4" parent="TextMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">24</item>
        <item name="android:letterSpacing">0.035</item> <!-- 0.56px / 16sp -->
    </style>

    <!-- Текст -->
    <style name="Text24Regular" parent="TextRegular">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingMultiplier">32</item>
    </style>

    <style name="Text16Regular" parent="TextRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">24</item>
        <item name="android:letterSpacing">0.005</item> <!-- 0.08px / 16sp -->
    </style>

    <style name="Text16Medium" parent="TextMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">24</item>
        <item name="android:letterSpacing">0.005</item> <!-- 0.08px / 16sp -->
