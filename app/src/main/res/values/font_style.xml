        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.28</item>
    </style>

    <style name="H4" parent="TextMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.24</item>
        <item name="android:letterSpacing">0.035</item> <!-- 0.56px / 16sp -->
    </style>

