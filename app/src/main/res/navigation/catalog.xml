<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catalog"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="ru.e2e4.shopmobile.modules.catalog.view.CategoriesFragment"
        android:label="categories_fragment"
        tools:layout="@layout/catalog_fragment_categories">
        <action
            android:id="@+id/action_categoriesFragment_to_subcategoriesFragment"
            app:destination="@+id/subcategoriesFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/subcategoriesFragment"
        android:name="ru.e2e4.shopmobile.modules.catalog.view.SubcategoriesFragment"
        android:label="catalog_fragment_subcategories"
        tools:layout="@layout/catalog_fragment_subcategories">
        <argument
            android:name="category"
            app:argType="ru.e2e4.shopmobile.modules.catalog.data.CategoriesNode" />
        <action
            android:id="@+id/action_subcategoriesFragment_self"
            app:destination="@id/subcategoriesFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_subcategoriesFragment_to_goodsListFragment"
            app:destination="@id/goodsListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/goodsListFragment"
        android:name="ru.e2e4.shopmobile.modules.catalog.view.GoodsListFragment"
        android:label="catalog_fragment_goods_list"
        tools:layout="@layout/catalog_fragment_goods_list" />
</navigation>