<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стиль шрифта -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextMedium">
